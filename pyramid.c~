#include <stdio.h>

int main()
{
	int i, j, spc, rows,k;
	printf("Enter number of rows ");
	scanf("%d", &rows);
	spc = rows - 1; 

	for (i=1; i<=rows;i++)
		{
			for (j=0; j<=spc; j++)
				{
					printf(" ");
				}
			for(k=1;k<=i;k++)
				{
					printf("* ");
				}
			printf("\n");
			spc--;
		}
	return 0;
}

						
